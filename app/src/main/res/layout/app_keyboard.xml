<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="1"
                android:layout_weight="1" android:textColor="@color/button_color"/>

            <Button
                android:id="@+id/btn2"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="2"
                android:layout_weight="1" android:textColor="@color/button_color"/>

            <Button
                android:id="@+id/btn3"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="3"
                android:layout_weight="1" android:textColor="@color/button_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="4"
                android:layout_weight="1" android:textColor="@color/button_color"/>

            <Button
                android:id="@+id/btn5"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="5"
                android:layout_weight="1" android:textColor="@color/button_color"/>

            <Button
                android:id="@+id/btn6"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="6"
                android:layout_weight="1" android:textColor="@color/button_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="7"
                android:layout_weight="1" android:textColor="@color/button_color"/>

            <Button
                android:id="@+id/btn8"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="8"
                android:layout_weight="1" android:textColor="@color/button_color"/>

            <Button
                android:id="@+id/btn9"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="9"
                android:layout_weight="1" android:textColor="@color/button_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHash"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="#"
                android:layout_weight="1" android:textColor="@color/button_color"/>

            <Button
                android:id="@+id/btn0"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="0"
                android:layout_weight="1" android:textColor="@color/button_color"/>

            <Button
                android:id="@+id/btnStar"
                android:textSize="35sp" android:background="@drawable/keyboard_key_view"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="*"
                android:layout_weight="1" android:textColor="@color/button_color"/>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>